{
    "compilerOptions": {
        "declaration": true,
        "lib": ["ES2020"],
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "removeComments": true,
        "inlineSources": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  