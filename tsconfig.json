{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "target": "es2015",
        "outDir": "./lib",
        "rootDir": "./src",
        "sourceMap": true,
        "removeComments": true,
        "inlineSources": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true
    },
    "exclude": ["node_modules", "lib"]
}
